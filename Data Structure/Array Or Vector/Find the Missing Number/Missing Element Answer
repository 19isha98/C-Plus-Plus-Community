//Finding Missing number in array
#include<iostream>
using namespace std;
int main()
{   
	int arr[] = {1,2,4,5};
	int n = sizeof(arr)/sizeof(arr[0]);
	int sum = ((n+1)*(n+2))/2; 
	int total = 0;
	for(int i=0;i<n;i++)
	{
		total = total + arr[i];
	}
	cout<<"The missing number in a array is :-"<<sum-total;
}
//Output
The missing number in a array is :-3
